{
  "name": "kestrelwp/aviary",
  "description": "Composer plugin that scopes WordPress and WooCommerce dependencies for usage in WordPress plugins and themes.",
  "type": "composer-plugin",
  "autoload": {
    "psr-4": {
      "Kestrel\\Aviary\\": "src/"
    }
  },
  "license": "GPL-2.0-or-later",
  "bin": [
    "bin/aviary"
  ],
  "scripts": {
    "extract": "php ./scripts/extract-symbols.php"
  },
  "minimum-stability": "stable",
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": "^8.1",
    "composer-plugin-api": "^2.3",
    "composer/composer": "^2.7.4",
    "wpify/php-scoper": "^0.18.11"
  },
  "require-dev": {
    "jetbrains/phpstorm-stubs": "^v2023.3",
    "johnpbloch/wordpress": "^6.5.2",
    "nikic/php-parser": "^v4.19.1",
    "woocommerce/action-scheduler": "^3.7.4",
    "wpackagist-plugin/woocommerce": "^8.9.0"
  },
  "extra": {
    "class": "Kestrel\\Aviary\\Plugin",
    "wordpress-install-dir": "sources/wordpress",
    "installer-paths": {
      "sources/plugin-{$name}/": [
        "type:wordpress-plugin"
      ],
      "sources/theme-{$name}/": [
        "type:wordpress-theme"
      ]
    }
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "johnpbloch/wordpress-core-installer": true
    }
  }
}
